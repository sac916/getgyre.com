---
export interface Props {
  title?: string;
  description?: string;
  ogTitle?: string;
  ogDescription?: string;
}

const {
  title = 'Gyre — Ambient AI OS',
  description = 'Run a tribe of persistent AI agents on your machine. Memory, personality, curiosity — yours to own. brew install gyre',
  ogTitle = 'Gyre — Your AI tribe. Persistent. Curious. Yours.',
  ogDescription = 'An ambient AI OS written in Rust. Run a team of agents that think, remember, and work together. No cloud lock-in.',
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta property="og:title" content={ogTitle} />
  <meta property="og:description" content={ogDescription} />
  <meta property="og:type" content="website" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={ogTitle} />
  <meta name="twitter:description" content={ogDescription} />
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
  <style>
    :root {
      /* The Abyss — dark ocean, no surface light */
      --bg: #080d1a;
      --bg-deep: #030508;
      --surface: #060c16;
      --card: #040a12;
      --border: rgba(0, 120, 160, 0.14);
      --border-solid: #0d1f2e;
      --muted: #0d1e2a;
      /* Accent: desaturated deep teal — a glow, not a color */
      --teal: rgba(0, 120, 160, 0.85);
      --teal-light: #00aed0;
      --teal-glow: rgba(0, 120, 160, 0.12);
      --teal-border: rgba(0, 120, 160, 0.25);
      /* Text */
      --text: #ffffff;
      --text-secondary: rgba(255, 255, 255, 0.65);
      --text-muted: rgba(255, 255, 255, 0.35);
    }
    * { box-sizing: border-box; margin: 0; padding: 0; }
    html {
      background: var(--bg);
      color: var(--text);
    }
    body {
      /* Page darkens as you scroll — like descending into the abyss */
      background: linear-gradient(to bottom, var(--bg) 0%, #060b14 40%, #040810 70%, var(--bg-deep) 100%);
      background-attachment: fixed;
      color: var(--text);
      font-family: 'Inter', system-ui, sans-serif;
      line-height: 1.6;
      min-height: 100vh;
    }
    h1, h2, h3, h4 {
      font-family: Georgia, 'Times New Roman', serif;
      line-height: 1.2;
    }
    code, pre, .mono {
      font-family: 'JetBrains Mono', 'Fira Code', Consolas, monospace;
    }
    a { color: var(--teal-light); text-decoration: none; }
    a:hover { color: var(--text); }
    ::selection { background: rgba(0, 120, 160, 0.25); }
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-track { background: var(--bg); }
    ::-webkit-scrollbar-thumb { background: var(--muted); border-radius: 3px; }
  </style>
</head>
<body>
  <slot />
</body>
</html>
